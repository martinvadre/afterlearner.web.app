{
    "hosting": {
        "public": "public",
        "cleanUrls": true,
        "rewrites": [
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "/**",
                "destination": "/404.html"
            }
        ],
        "ignore": [
            "**/.*", 
            "firebase.json", 
            "**/node_modules/**"
        ]
    }
}